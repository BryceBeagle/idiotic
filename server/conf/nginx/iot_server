server {
    listen 80;
    server_name brycebeagle.com;

    location ~ /.well-known {
        allow all;
    }
    location / {
        include proxy_params;
        proxy_pass http://unix:/home/ubuntu/iot-server/server/iot_server.sock;
    }

    listen 443 ssl; # managed by Certbot
ssl_certificate /etc/letsencrypt/live/brycebeagle.com/fullchain.pem; # managed by Certbot
ssl_certificate_key /etc/letsencrypt/live/brycebeagle.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


    if ($scheme != "https") {
        return 301 https://$host$request_uri;
    } # managed by Certbot

}
